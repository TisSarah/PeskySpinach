<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.schandler.peskyspinach"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/pesky_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".PeskySpinach"
            android:label="@string/app_name" 
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseOffense"></activity>
        <activity android:name=".SendOffense" 
            android:uiOptions="splitActionBarWhenNarrow" 
            android:label="Choose how and where to send">
        </activity>
    </application>

</manifest>